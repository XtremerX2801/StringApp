<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:id="@+id/verify_your_email"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/verify_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_title"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/verify_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/verify_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verify_title" />

    <ImageView
        android:id="@+id/verify_facebook"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/verify_your_email"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verify_line1"
        app:layout_constraintDimensionRatio="9:5"
        app:layout_constraintWidth_percent="0.8"/>

    <TextView
        android:id="@+id/verify_sent_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_sent_to"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verify_facebook"/>

    <TextView
        android:id="@+id/verify_emailname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emailname"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verify_sent_to"/>

    <TextView
        android:id="@+id/verify_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_check"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verify_emailname"/>

    <TextView
        android:id="@+id/verify_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_resend"
        android:textSize="16sp"
        android:textColor="#933DEC"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verify_check"/>

    <TextView
        android:id="@+id/verify_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_sign_in_1"
        android:text="@string/verify_email"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verify_resend" />

</androidx.constraintlayout.widget.ConstraintLayout>